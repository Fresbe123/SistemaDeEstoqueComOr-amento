<Window x:Class="GestãoEstoque.CadastrarItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestãoEstoque"
        mc:Ignorable="d"
        Title="Cadastro de Itens" 
        Height="700" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI">

    <Window.Resources>
        <DropShadowEffect x:Key="ShadowEffect" BlurRadius="10" ShadowDepth="2" Opacity="0.15"/>

        <!-- Estilo para TextBox -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Estilo para rótulos -->
        <Style x:Key="FormLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#616161"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <!-- Estilo para botão primário -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#D32F2F"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#B71C1C"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#7F0000"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para DataGrid -->
        <Style x:Key="ModernDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#FAFAFA"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
        </Style>

        <!-- Estilo para cabeçalhos de coluna -->
        <Style x:Key="DataGridColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="Foreground" Value="#424242"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <!-- Estilo para CheckBox na DataGrid -->
        <Style x:Key="DataGridCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Cabeçalho -->
        <Border Grid.Row="0" Background="#D32F2F" CornerRadius="4" Padding="15" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="📦" FontSize="20" Margin="0,0,10,0"/>
                <TextBlock Text="Cadastro de Itens" 
                           Foreground="White" 
                           FontSize="18" 
                           FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <!-- Formulário de cadastro -->
        <Border Grid.Row="0" 
                Background="White" 
                CornerRadius="8" 
                Padding="20" 
                Margin="0,60,0,20"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                Effect="{StaticResource ShadowEffect}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Campos do formulário -->
                <UniformGrid Grid.Column="0" Columns="4" Rows="2">
                    <!-- Linha 1 -->
                    <StackPanel Margin="5">
                        <TextBlock Text="Item" Style="{StaticResource FormLabel}"/>
                        <TextBox x:Name="txtItem" Style="{StaticResource ModernTextBox}" 
                 KeyDown="Textbox_kDown" Tag="txtCodigo"/>
                    </StackPanel>

                    <StackPanel Margin="5">
                        <TextBlock Text="Código" Style="{StaticResource FormLabel}"/>
                        <TextBox x:Name="txtCodigo" Style="{StaticResource ModernTextBox}"
                 KeyDown="Textbox_kDown" Tag="txtDescricao"/>
                    </StackPanel>

                    <StackPanel Margin="5" Grid.ColumnSpan="2">
                        <TextBlock Text="Descrição" Style="{StaticResource FormLabel}"/>
                        <TextBox x:Name="txtDescricao" Style="{StaticResource ModernTextBox}"
                 KeyDown="Textbox_kDown" Tag="txtUnidade"/>
                    </StackPanel>

                    <!-- Linha 2 -->
                    <StackPanel Margin="5">
                        <TextBlock Text="Unidade" Style="{StaticResource FormLabel}"/>
                        <TextBox x:Name="txtUnidade" Style="{StaticResource ModernTextBox}"
                 KeyDown="Textbox_kDown" Tag="txtQuantidade"/>
                    </StackPanel>
                    

                    <StackPanel Margin="5">
                        <TextBlock Text="Quantidade" Style="{StaticResource FormLabel}"/>
                        <TextBox x:Name="txtQuantidade" Style="{StaticResource ModernTextBox}"
                 KeyDown="Textbox_kDown" Tag="txtPreco"/>
                    </StackPanel>

                    <StackPanel Margin="5">
                        <TextBlock Text="Preço" Style="{StaticResource FormLabel}"/>
                        <TextBox x:Name="txtPreco" Style="{StaticResource ModernTextBox}"
                 KeyDown="Textbox_kDown" Tag="txtDesconto"/>
                    </StackPanel>
                </UniformGrid>

                <!-- Botões de ação -->
                <StackPanel Grid.Column="1" VerticalAlignment="Bottom" Margin="10,0,0,0">
                    <CheckBox x:Name="chkFavorito" Content="Favoritar Item" 
                              FontWeight="SemiBold" Margin="0,0,0,10"
                              Foreground="#616161" VerticalAlignment="Center"/>

                    <Button Content="Adicionar Item" 
                            Style="{StaticResource PrimaryButtonStyle}"
                            Width="150"
                            Height="40"
                            Click="BtnAdicionar_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Tabela de produtos -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="8" 
                Padding="1"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                Effect="{StaticResource ShadowEffect}">
            <DataGrid x:Name="dgProdutos" 
                     Style="{StaticResource ModernDataGrid}"
                     ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
                     AutoGeneratingColumn="BtnFavoritar_Click">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Favorito" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsFavorito}" 
                                          Style="{StaticResource DataGridCheckBoxStyle}"
                                          ToolTip="Marcar como favorito"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Item" Binding="{Binding Item}" Width="80"/>
                    <DataGridTextColumn Header="Código" Binding="{Binding Codigo}" Width="120"/>
                    <DataGridTextColumn Header="Descrição" Binding="{Binding Descricao}" Width="*"/>
                    <DataGridTextColumn Header="UN" Binding="{Binding Unidade}" Width="70"/>
                    <DataGridTextColumn Header="Quantidade" Binding="{Binding Quantidade}" Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="Margin" Value="0,0,10,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Preço" Binding="{Binding Preco}" Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="Margin" Value="0,0,10,0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Total" Binding="{Binding Total}" Width="120">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="Margin" Value="0,0,10,0"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Foreground" Value="#D32F2F"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Window>
<Window x:Class="GestãoEstoque.SolicitarQuantidadeOrcamento"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Adicionar Item ao Orçamento" 
        Height="400" 
        Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Informações do Item -->
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Informações do Item:" 
                   FontWeight="Bold" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Name="txtItemInfo" 
                   TextWrapping="Wrap" Margin="0,0,0,5"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Name="txtEstoqueInfo" 
                   Foreground="Blue" TextWrapping="Wrap" Margin="0,0,0,15"/>

        <!-- Quantidade -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Quantidade:"/>
        <TextBox Grid.Row="3" Grid.Column="1" Name="txtQuantidade" Text="1"/>

        <!-- Desconto -->
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Desconto (%):"/>
        <TextBox Grid.Row="4" Grid.Column="1" Name="txtDesconto" Text="0"/>

        <!-- Separador -->
        <Rectangle Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Height="1" Fill="LightGray" Margin="0,15"/>

        <!-- Cálculos -->
        <TextBlock Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Text="Cálculos:" 
                   FontWeight="Bold" Margin="0,10,0,5"/>

        <TextBlock Grid.Row="7" Grid.Column="0" Text="Subtotal:"/>
        <TextBlock Grid.Row="7" Grid.Column="1" Name="txtSubtotal" Text="R$ 0,00"/>

        <TextBlock Grid.Row="8" Grid.Column="0" Text="Desconto:"/>
        <TextBlock Grid.Row="8" Grid.Column="1" Name="txtValorDesconto" Text="-R$ 0,00" Foreground="Red"/>

        <!-- Total -->
        <TextBlock Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" Name="txtTotal" 
                   Text="TOTAL: R$ 0,00" FontWeight="Bold" FontSize="14" 
                   Foreground="Green" Margin="0,10,0,20" HorizontalAlignment="Center"/>

        <!-- Espaço vazio -->
        <Rectangle Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2" Fill="Transparent"/>

        <!-- Botões -->
        <StackPanel Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="BtnCancelar" Content="Cancelar" Click="BtnCancelar_Click"/>
            <Button Name="BtnConfirmar" Content="Confirmar" Click="BtnConfirmar_Click" 
                    Background="#FFDDDDDD" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
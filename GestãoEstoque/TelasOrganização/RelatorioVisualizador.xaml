<Window x:Class="GestãoEstoque.RelatorioVisualizador"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Relatórios de OS e Orçamentos" Height="450" Width="800">
    <Grid Margin="10">
        <DataGrid x:Name="dgRelatorios" AutoGenerateColumns="False" IsReadOnly="True"
                  MouseDoubleClick="dgRelatorios_MouseDoubleClick" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Cliente" Binding="{Binding Cliente}" Width="*"/>
                <DataGridTextColumn Header="Data" Binding="{Binding Data}" Width="140"/>
                <DataGridTextColumn Header="Total" Width="120">
                    <DataGridTextColumn.Binding>
                        <Binding Path="ValorTotal" StringFormat="N2"/>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}" Width="100"/>
                <DataGridTextColumn Header="Arquivo" Binding="{Binding CaminhoArquivo}" Width="250"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Botões embaixo -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,10,0,0">
            <Button Content="Abrir" Click="BtnAbrirClick" Width="80" Margin="5"/>
            <Button Content="Ver OS" Click="BtnVerOS_Click" Width="80" Margin="5"/>
            <Button Content="Ver Orçamentos" Click="BtnVerOrcamentos_Click" Width="120" Margin="5"/>
            <Button Content="Ver Todos" Click="BtnVerTodos_Click" Width="80" Margin="5"/>
            <Button Content="Gerar OS" Click="BtnGerarOS_Click" Width="80" Margin="5" Background="Green" Foreground="White"/>
            <Button Content="Exportar (CSV)" Click="BtnExportarCSV_Click" Width="120" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>